---
import { ReactFragment } from "astro/jsx-runtime";

import "../../styles/global.css";
---

<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <title><slot name="title" /></title>
    </head>
    <body
        class="max-w-3xl mx-auto p-6 font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-500"
    >
        <header
            class="sticky top-0 bg-white/70 dark:bg-gray-900/70 backdrop-blur-md py-4 z-50 flex justify-between items-center border-b border-gray-200 dark:border-gray-800"
        >
            <h1 class="text-xl font-bold">My Blog</h1>
            <button
                id="theme-toggle"
                class="px-3 py-1 rounded bg-gray-100 dark:bg-gray-800"
                onclick="document.documentElement.classList.toggle('dark')"
            >
                Toggle Theme
            </button>
        </header>

        <main class="mt-8">
            <slot />
        </main>

        <footer class="mt-16 text-center text-gray-500 text-sm">
            Â© {new Date().getFullYear()} My Blog
        </footer>
    </body>
</html>

<!-- GSAP animation -->
<script is:client></script>

<script is:client>
    const marquee1 = document.getElementById("marquee-1");
    const marquee1Content = marquee1.querySelector("b");
    const marquee2 = document.getElementById("marquee-2");
    const marquee2Content = marquee2.querySelector("b");

    const moveRight = {
        left: "100%",
        translateX: "-100%",
        ease: "linear",
        duration: 15,
    };

    const moveLeft = {
        left: "0%",
        translateX: "-0%",
        ease: "linear",
        duration: 15,
    };

    const moveUp = {
        translateY: "0%",
        ease: "linear",
        duration: 4,
    };

    const moveUp2 = {
        translateY: "-100%",
        ease: "linear",
        duration: 4,
    };

    const moveDown = {
        translateY: "100%",
        ease: "linear",
        duration: 4,
    };

    const moveDown2 = {
        translateY: "0%",
        ease: "linear",
        duration: 4,
    };

    gsap.timeline({ repeat: -1 })
        .to(marquee1, moveRight)
        .to(
            marquee1Content,
            {
                text: "go to the future",
                duration: 8,
                ease: "power2.inOut",
            },
            "-=15",
        )
        .to(marquee1, moveDown)
        .to(marquee1, moveLeft)
        .to(
            marquee1Content,
            {
                text: "Let's create something amazing",
                duration: 8,
                ease: "power2.inOut",
            },
            "-=15",
        )
        .to(marquee1, moveUp);

    gsap.timeline({ repeat: -1 })
        .to(marquee2, moveLeft)
        .to(
            marquee2Content,
            {
                text: "Let's create something wonderful",
                duration: 8,
                ease: "power2.inOut",
            },
            "-=15",
        )
        .to(marquee2, moveUp2)
        .to(marquee2, moveRight)
        .to(
            marquee2Content,
            {
                text: "towards the future",
                duration: 8,
                ease: "power2.inOut",
            },
            "-=15",
        )
        .to(marquee2, moveDown2);
</script>

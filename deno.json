{
  "imports": {
    "std/": "https://deno.land/std@0.175.0/",
    "firebase/": "https://esm.sh/v106/firebase@9.16.0/deno/"
  },
  "lint": {
    "files": {
      "include": ["./"],
      "exclude": ["node_modules", "_public", "dist", "src"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "camelcase", "no-const-assign"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "utils/"],
      "exclude": ["*"]
    },
    "options": {
      "semiColons": true
    }
  },
  "nodeModulesDir": "auto"
}
